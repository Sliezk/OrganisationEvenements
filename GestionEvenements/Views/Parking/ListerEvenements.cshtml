@model IEnumerable<GestionEvenements.Models.EvenementViewModel>

@{
    ViewBag.Title = "ListerEvenements";
}

<h2>Liste des évènements</h2>

<div class="events">
    @foreach (var item in Model)
    {
    <div class="event col-md-4">
        @Html.ActionLink("" + @Html.DisplayFor(modelItem => item.Nom) + "", "Details", new { id = item.ID })
        <br />
        @Html.DisplayFor(modelItem => item.Lieu)
        <br />
        @Html.DisplayFor(modelItem => item.Date)
        <br />
        @Html.DisplayFor(modelItem => item.Duree)
        <br />
        @Html.DisplayFor(modelItem => item.Theme.Nom)
    </div>
    }
    </div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Lieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theme.Nom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Lieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theme)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID })
        </td>
    </tr>
}

</table>
